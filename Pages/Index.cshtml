@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="path/to/your/css/styles.css">
    <script>
        function showAlert() {
            alert('Welcome to Vikas Tech World!');
        }
    </script>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Vikas Tech World</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.</p>
        <p>Read our <a href="/Privacy">Privacy Policy</a>.</p>
        <button onclick="showAlert()">Click me for a Welcome Message</button>
    </div>
</body>
</html>
